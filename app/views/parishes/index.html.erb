<%= stylesheet_link_tag "tablas.css", :media => "screen" %>
<%= label_tag nil, (">> " + @province.prov_nombre + " >> " + @canton.cant_nombre), :class=>"negrita" %>
<div id="tabla">
  <table class="bordered">
    <th><div class="titulos"><p>Parroquia</p></div></th>
    <th><div class="titulos"><p>Acciones</p></div></th>
    <% @parroquias.each do |p| %>
      <tr>
        <td><%= label_tag nil, p.parr_nombre %></td>
        <td><%= label_tag nil, (link_to (image_tag "contenido/edit16.png"), :action => "edit", :id => p.id) %><%= label_tag nil, (link_to (image_tag "contenido/delete16.png"), p, :method => "delete", :confirm => "Â¿Esta seguro?") %></td>
      </tr>
    <% end %>
    <%= form_for @parroquia do |p|%>
      <tr>
        <td><%= p.text_field :parr_nombre %></td>
        <%= p.hidden_field :canton_id, value: @id %>
        <td><%= label_tag nil, image_submit_tag("contenido/add2-16.png")%></td>
      </tr>
    <%end%>
  </table>
</div>
<%#= link_to 'Agregar nueva parroquia', new_parish_path(:canton_id => @id) %>