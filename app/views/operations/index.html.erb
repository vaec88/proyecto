<%= stylesheet_link_tag "tablas.css", :media => "screen" %>
<div id="tabla">
  <table class="bordered">
    <th><div class="titulos"><p>Tipo de Operacion</p></div></th>
    <th><div class="titulos"><p>Acciones</p></div></th>
    <% @operaciones.each do |o| %>
      <tr>
        <td><%= label_tag nil, o.oper_nombre %></td>
        <td><%= label_tag nil, (link_to (image_tag "contenido/edit16.png"), :action => "edit", :id => o.id) %><%= label_tag nil, (link_to (image_tag "contenido/delete16.png"), o, :method => "delete", :confirm => "Â¿Esta seguro?") %></td>
      </tr>
    <% end %>
    <%= form_for @operacion do |o|%>
      <tr>
        <td><%= o.text_field :oper_nombre %></td>
        <td><%= label_tag nil, image_submit_tag("contenido/add2-16.png")%></td>
      </tr>
    <%end%>
  </table>
</div>
